<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="5dp">

    <RelativeLayout android:id="@+id/message_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_margin="5dp"
                    android:background="@color/apptheme_color">

        <ImageView android:id="@+id/sender_avatar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end|center_vertical"
                   android:contentDescription="Sender Avatar"
                   android:src="@drawable/ic_launcher"/>

        <TextView android:id="@+id/sender_alias"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@id/sender_avatar"
                  android:layout_toLeftOf="@+id/date_time"
                  android:textSize="20sp"
                  android:paddingLeft="10dp"
                  android:paddingRight="2dp"
                  android:textColor="#FFFFFF"
                  android:text="Rekha"/>

        <LinearLayout android:id="@id/date_time"
                      android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="right"
                      android:paddingBottom="2dp"
                      android:paddingTop="2dp"
                      android:layout_marginRight="2dp"
                      android:layout_alignParentRight="true">

            <TextView android:id="@+id/sent_date"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingTop="2dp"
                      android:paddingBottom="2dp"
                      android:textColor="@android:color/white"
                      android:text="14 Dec 2014"/>

            <TextView android:id="@+id/sent_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@android:color/white"
                      android:text="03:04 PM"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView android:id="@+id/counselling_msg_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="-5dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:padding="10dp"
              android:textSize="15sp"
              android:background="#e4eec1"
              android:text="blah blah blah blah blah blahblah blah blah blah blah blahblah blah blah blah blah blahblah blah blah blah blah blahblah blah blah blah blah blah"/>

</LinearLayout>
